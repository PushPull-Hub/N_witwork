{
  "extends": ["prettier", "plugin:node/recommended"],
  "rules": {
    // "prettier/prettier": "error",
    "no-unused-vars": "off",
    "no-console": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "space-before-blocks": "off",
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["debug"],
        "convertPath": null,
        "tryExtensions": [".js", ".json", ".node"]
      }
    ]
  }
}
